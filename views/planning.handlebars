<head>
    <style>
        body {
            background-image: url(../images/2.jpg);
            background-repeat: repeat-y;
        }
    </style>
</head>

<div id="planningBackground">
    <a id="messageLink" href="/message">&#10133</a>

    {{!-- This is where the new messages will be displayed --}}
    <div class="card-column">
        {{#each messages as |message|}}
        <div class="card" id="messageBox">
            <div class="card-body">
                <button class="messageYO" type="submit" data-id="{{message.id}}">🗑️</button>
                <h3 class="card-title">{{message.name}}</h3>
                <h6 class="card-subtitle mb-2 text-muted">{{format_date message.date_created}}</h6>
                <p id="messageDescription" class="card-text">{{message.description}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<script src="./js/messageDelete.js"></script>