<script type="text/javascript">
            $(document).ready(function () {
              var chartDiv = $("#barChart");
              var myChart = new Chart(chartDiv, {
                type: 'pie',
                data: {
                  labels: ["To Be Completed", "In Progress", "Complete"],
                  datasets: [
                    {
                      data: [6, 4, 2],
                      backgroundColor: [
                        "#FF0000",
                        "#0000FF",
                        "#00FF00",
                      ]
                    }]
                },
                options: {
                  title: {
                    display: true,
                    text: 'Pie Chart'
                  },
                  responsive: true,
                  maintainAspectRatio: false,
                }
              });
            });
</script>